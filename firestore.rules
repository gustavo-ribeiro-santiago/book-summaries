rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Books collection rules
    match /books/{bookId} {
      // Allow read if user owns the book
      allow read: if isOwner(resource.data.userId);
      
      // Allow create if user is authenticated and setting their own userId
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.title is string
        && request.resource.data.author is string;
      
      // Allow update if user owns the book
      allow update: if isOwner(resource.data.userId)
        && request.resource.data.userId == resource.data.userId;
      
      // Allow delete if user owns the book
      allow delete: if isOwner(resource.data.userId);
      
      // Chapters subcollection rules
      match /chapters/{chapterId} {
        // Allow read if user owns the parent book
        allow read: if isAuthenticated() 
          && get(/databases/$(database)/documents/books/$(bookId)).data.userId == request.auth.uid;
        
        // Allow create if user owns the parent book
        allow create: if isAuthenticated()
          && get(/databases/$(database)/documents/books/$(bookId)).data.userId == request.auth.uid
          && request.resource.data.userId == request.auth.uid
          && request.resource.data.title is string
          && request.resource.data.chapterNumber is number;
        
        // Allow update if user owns the chapter
        allow update: if isAuthenticated()
          && get(/databases/$(database)/documents/books/$(bookId)).data.userId == request.auth.uid
          && request.resource.data.userId == resource.data.userId;
        
        // Allow delete if user owns the chapter
        allow delete: if isAuthenticated()
          && get(/databases/$(database)/documents/books/$(bookId)).data.userId == request.auth.uid;
      }
    }
  }
}

